{% extends 'layouts/auth.twig' %}

{% block css %}
	
{% endblock %}

{% block body %}
	<p class="text-3xl font-bold text-center">Welcome.</p>
	<h1 class="hidden">Inscription</h1>
	<form class="flex flex-col pt-3 md:pt-8" action="/register" method="post">
		<div class="flex flex-col pt-4">
			<label for="userName" class="text-lg">Nom d'Utilisateur</label>
			<input type="userName" id="userName" name="userName" placeholder="User123" class="w-full px-3 py-2 mt-1 leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline">
		</div>

		<div class="flex flex-col pt-4">
			<label for="email" class="text-lg">Email</label>
			<input type="email" id="email" name="email" placeholder="exemple@domaine.com" class="w-full px-3 py-2 mt-1 leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline">
		</div>

		<div class="flex flex-col pt-4">
			<label for="password" class="text-lg">Mot de passe</label>
			<input type="password" id="password" name="password" placeholder="Mot de passe" class="w-full px-3 py-2 mt-1 leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline">
		</div>

		<input type="submit" value="S'inscrire" class="p-2 mt-8 text-lg font-bold text-white bg-black cursor-pointer from-rose-900 to-red-500 bg-gradient-to-r hover:bg-gray-700">
	</form>
	<div class="pt-12 pb-12 text-center">
		<p>Déjà un compte ? <a href="/login" class="font-semibold underline">Se connecter</a></p>
	</div>
{% endblock %}
